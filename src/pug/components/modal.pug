.modal(data-modal="contacts").is-hidden
	.modal__bg.js-close
	form.modal__content.is-hidden
		.modal__close.js-close-modal
			+svg('close')
		.modal__title
			| Contact Us
		.modal__control.is-error
			label.modal__label
				| Name
				span *
			.modal__input.is-error
				input
			.error error message
		.modal__control
			label.modal__label
				| Company
			.modal__input
				input
		.modal__control
			label.modal__label
				| E-mail
				span *
			.modal__input
				input
		.modal__control
			label.modal__label
				| Mobile / Telegram
				span *
			.modal__input
				input

		.modal__control
			label.modal__label
				| Website / Portfolio
			.modal__input
				input
		.modal__control
			label.modal__label
				| How can we help you?
			.modal__input.modal__input--textarea
				textarea
		.modal__personal
			label.modal__checkbox
				input(type="checkbox")
				span
			.modal__text
				span.modal__subtext
					| I agree to the processing of
				br.for-mobile
				a(href="#") personal data
		+ButtonSumbit({
			size: 'medium',
			title: 'Submit'
		}).button--form

.modal(data-modal="personal").is-hidden
	.modal__bg.js-close
	form.modal__content.is-hidden
		.modal__close.js-close-modal
			+svg('close')
		.modal__title
			| Personal Account
