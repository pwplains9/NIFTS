			.tabs__navs
				.tabs__nav(data-tab="3").is-active
					| Login
				.tabs__nav(data-tab="4")
					| Registration
			.tabs__content
				.tabs__element.is-active(data-tab="3")
					.modal__control
						label.modal__label
							| E-mail
						.modal__input
							input
					.modal__control
						label.modal__label
							| Password
						.modal__input
							input
